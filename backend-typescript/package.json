{
  "name": "backend-typescript",
  "version": "1.0.0",
  "description": "Troumaca Typescript Backend",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaaelw/troumaca-web"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test-jt": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node --inspect=5959 dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect=5959 dist/server.js",
    "serve-debug2": "node --inspect=5959 dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "class-transformer": "^0.1.9",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "generate-password": "^1.4.0",
    "generate-sms-verification-code": "^1.0.5",
    "libphonenumber-js": "^1.0.24",
    "locale2": "^2.2.0",
    "morgan": "^1.9.0",
    "nedb": "^1.8.0",
    "npm": "^5.8.0",
    "password-generator": "^2.2.0",
    "password-validator": "^4.0.0",
    "path": "^0.12.7",
    "properties-reader": "0.0.16",
    "reflect-metadata": "^0.1.12",
    "request": "^2.85.0",
    "rxjs": "^5.5.6",
    "to": "^0.2.9",
    "underscore": "^1.8.3",
    "update": "^0.7.4",
    "uuid": "^3.2.1",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.3",
    "@types/debug": "0.0.30",
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/nedb": "^1.8.0",
    "@types/properties-reader": "0.0.1",
    "@types/request": "^2.47.0",
    "@types/source-map": "^0.5.7",
    "@types/validator": "^9.4.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
